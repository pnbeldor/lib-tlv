{
    "version": 4,
    "configurePresets": [
        {
            "name": "default",
            "description": "Default configuration",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "TLV_BUILD_SHARED": "ON",
                "TLV_BUILD_STATIC": "ON",
                "TLV_BUILD_EXAMPLES": "ON",
                "TLV_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "description": "Debug build with sanitizers",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "TLV_ENABLE_SANITIZERS": "ON",
                "TLV_WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "msvc",
            "description": "Build with MSVC",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/msvc",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "TLV_BUILD_SHARED": "ON",
                "TLV_BUILD_STATIC": "ON"
            }
        },
        {
            "name": "clang",
            "inherits": "default",
            "description": "Build with Clang",
            "binaryDir": "${sourceDir}/build/clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "gcc",
            "inherits": "default",
            "description": "Build with GCC",
            "binaryDir": "${sourceDir}/build/gcc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "jobs": 8
        },
        {
            "name": "clang",
            "description": "",
            "displayName": "",
            "configurePreset": "clang"
        },
        {
            "name": "msvc",
            "description": "",
            "displayName": "",
            "configurePreset": "msvc"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "clang",
            "description": "",
            "displayName": "",
            "configurePreset": "clang"
        },
        {
            "name": "clangTest",
            "description": "",
            "displayName": "",
            "configurePreset": "clang"
        }
    ]
}